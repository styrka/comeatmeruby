<% provide(:title, 'Edit user') %>
<h1 class='align-center'>Update your profile</h1>

<div class='row'>
  <div>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email, 'E-Mail' %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, 'Password Confirmation' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit 'Save changes', class: 'square block button nocolor' %>
    <% end %>

    <%= link_to 'Sign Out', signout_path, class: 'square block button nocolor', method: 'delete' %>

    <%= gravatar_for @user %><a href='http://gravatar.com/emails' class='square block button nocolor'>Change</a>
  </div>
</div>
