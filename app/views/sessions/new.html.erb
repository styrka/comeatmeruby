<% provide(:title, 'Sign in') %>
<h1 class='align-center'>Sign in</h1>

<div class="row">
  <div>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit 'Sign in', class: 'square block button nocolor' %>
    <% end %>

    <%= link_to 'Register now!', signup_path, class: 'square block button nocolor' %>
  </div>
</div>
